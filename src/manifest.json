{
  "manifest_version": 2,

  "name": "Productivity Enforcer",
  "description": "A simple Chrome Extension that prevents the browser from launching websites, which you specify.",
  "version": "3.2",

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": { 
    "16":"icon-16.png", 
    "48":"icon-48.png", 
    "128":"icon-128.png" 
  }, 

  "background": {
    "scripts": ["background.js"]
  }
}